<% layout('layouts/boilerplate') -%>
     <div class="container">
         <div class="row">
             <div class="col-3"></div>
             <div class="col-6">
                <h1>Login</h1>
                <form action="/login" method="POST" >
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                        <span class="input-group-text" id="username-label">Username</span>
                        </div>
                        <input type="text" name="username" id="username" class="form-control" aria-label="username" aria-describedby="username-label" placeholder="Username" autofocus required>
                        <label for="username" class="d-none">Username</label>
                    </div>
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="email-label">Email</span>
                        </div>
                        <input type="email" name="email" id="email" class="form-control" aria-label="email-label" aria-describedby="email-label" placeholder="Email" required>
                        <label for="email" class="d-none">Email Address:</label>
                    </div> 
                    <button type="submit" class="btn btn-secondary">Submit</button>
                    <p class="mt-2">
                        <a href="/register">Don't have an account? Sign Up Here!</a>
                    </p>
                </form>
             </div>
             <div class="col-3"></div>
         </div>
     </div>
<%  %>