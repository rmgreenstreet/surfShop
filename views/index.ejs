<% layout('layouts/boilerplate') -%>
<div class="container">
    <div class="jumbotron" id="homeHero" style="background-image: url('<%= posts[randomIndex].images[0].url %>'); background-size:cover; background-position:center;">
        <div class="row">
            <div class="col-5">
                <div class="card p-2">
                    <h1><%= title %></h1>
                    <p>Welcome to <%= title %></p>
                    <a href="/posts" class="btn" style="background-color:<%= color %>;">View All Posts</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div id="map"></div>
    </div>
    <h1 class="mt-4">Most Recent Posts</h1>
    <div id="recent-posts" class="row mt-4">
        <% recentPosts.forEach((post) => { %>
            <div class="col post-tile" id="<%= post.id %>">
                <a href="/posts/<%= post.slug %>">
                    <div class="card">
                        <img src="<%= post.images[0].url %>" alt="<%= post.title %>" class="card-img-top">
                        <div class="card-body">
                            <h2 class="card-title"><%= post.title %></h2>
                            <div class="card-text"><%= post.description %></div>
                        </div>
                    </div>
                </a>
            </div>
        <% }) %>
    </div>
</div>

<script>
    mapboxgl.accessToken = '<%= mapBoxToken %>';
    var posts = {features:<%- JSON.stringify(posts) %>};
</script>
<script src = "/js/allPostsClusterMap.js"></script>
