<form action="/posts" method="GET">
    <fieldset>
        <legend>
            Search
        </legend>
        <label for="search">Search</label>
        <input type="text" name="search" id="search" placeholder="Search" value="<%= query.search %>">
    </fieldset>
    <fieldset>
        <div>
            <label for="location">Location</label>
            <input type="text" name="location" id="location" value="<%= query.location %>" placeholder="Address or ZIP Code">
            <small><a href="#"><i class="far fa-map-marker-alt" alt="Use My Location"></i></a></small>
        </div>
        <legend>
            Distance (Miles)
        </legend>
        <div>
            <input type="radio" name="distance" id="distance25" value="25" <%= query.distance === '25' ? 'checked' : '' %>>
            <label for="distance25">25</label>
        </div>
        <div>
            <input type="radio" name="distance" id="distance50" value="50" <%= query.distance === '50' ? 'checked' : '' %>>
            <label for="distance50">50</label>
        </div>
        <div>
            <input type="radio" name="distance" id="distance100" value="100" <%= query.distance === '100' ? 'checked' : '' %>>
            <label for="distance100">100</label>
        </div>
        <div><a href="#" id="clear-distance">Clear</a></div>
    </fieldset>
    <fieldset>
        <legend>
            Price
        </legend>
        <input type="number" name="price[min]" id="min" min="0" max="10000" step="1" placeholder="Min" value="<%= query.price.min %>">
        <label for="min">Min</label>
        <input type="number" name="price[max]" id="max" min="0" max="10000" step="1" placeholder="Max" value="<%= query.price.max %>">
        <label for="max">Max</label>
    </fieldset>
    <fieldset>
        <legend>
            Rating
        </legend>
        <input type="checkbox" name="avgRating[]" id="zero-stars" value="0" <%= query.avgRating.includes(0) ? 'checked' : '' %>>
        <label for="zero-stars">0 stars</label>
        <input type="checkbox" name="avgRating[]" id="one-star" value="1 <%= query.avgRating.includes(1) ? 'checked' : '' %>">
        <label for="one-star">1 star</label>
        <input type="checkbox" name="avgRating[]" id="two-stars" value="2" <%= query.avgRating.includes(2) ? 'checked' : '' %>>
        <label for="two-stars">2 stars</label>
        <input type="checkbox" name="avgRating[]" id="three-stars" value="3" <%= query.avgRating.includes(3) ? 'checked' : '' %>>
        <label for="three-stars">3 stars</label>
        <input type="checkbox" name="avgRating[]" id="four-stars" value="4" <%= query.avgRating.includes(4) ? 'checked' : '' %>>
        <label for="four-stars">4 stars</label>
        <input type="checkbox" name="avgRating[]" id="five-stars" value="5" <%= query.avgRating.includes(5) ? 'checked' : '' %>>
        <label for="five-stars">5 stars</label>
        <div><a href="/posts">Clear All</a></div>
    </fieldset>
    <input type="submit">
</form>