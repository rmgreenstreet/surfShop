<% layout('layouts/boilerplate') -%>
<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h1>Forgot Password</h1>
            <form action="/forgot-password?method=PUT" method="POST"><div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="email-label">Email</span>
                    </div>
                    <input type="email" name="email" id="email" class="form-control" aria-label="email-label" aria-describedby="email-label" placeholder="e.g. mrpotatohead@email.com" required autofocus>
                    <label for="email" class="d-none">Email Address:</label>
                </div>
                <button type="submit" class="btn btn-secondary">Reset Password</button>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</div>